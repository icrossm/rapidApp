<%= render 'shared/form' %>

<h1>Listing debts</h1>

<table>
  <thead>
    <tr>
      <th>Friend</th>
      <th>Amount</th>
      <th>Expirity</th>
      <th>Status</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @debts.each do |debt| %>
      <tr>
        <td><%= Friend.find(debt.friend_id).name %></td>
        <td><%= debt.amount %></td>
      
        <td><%= debt.expirity %></td>
        <td><%= debt.status %></td>
        <td><%= link_to 'Show', debt %></td>
        <td><%= link_to 'Edit', edit_debt_path(debt) %></td>
        <td><%= link_to 'Destroy', debt, method: :delete, data: { confirm: 'Are you sure?' } %></td>

      </tr>
    <% end %>
	
		
  </tbody>
</table>

<br>

<%= link_to 'New Debt', new_debt_path %>
